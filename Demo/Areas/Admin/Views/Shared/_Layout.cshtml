<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]-Administrator Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #2c3e50;
            color: white;
            position: fixed;
            top: 0;
            left: 0;
            display: flex;
            flex-direction: column;
            padding: 20px 0;
        }

            .sidebar h2 {
                text-align: center;
                margin-bottom: 20px;
                font-size: 1.5rem;
                font-weight: bold;
                color: #ecf0f1;
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
            }

                .sidebar ul li {
                    margin: 10px 0;
                }

                    .sidebar ul li a {
                        color: white;
                        text-decoration: none;
                        padding: 10px 20px;
                        display: block;
                        border-radius: 4px;
                        transition: background 0.3s ease;
                    }

                        .sidebar ul li a:hover {
                            background-color: #34495e;
                        }

                        .sidebar ul li a i {
                            margin-right: 10px;
                        }

        .main-content {
            margin-left: 250px;
            padding: 20px;
        }

            .main-content h1 {
                font-size: 2rem;
                margin-bottom: 20px;
            }

        .header {
            background-color: #34495e;
            color: white;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .header .admin-info {
                font-size: 1rem;
            }
    </style>
</head>
<body>
    <div class="sidebar">
        <h2>Admin Dashboard</h2>
        <ul>
            <li><a asp-action="Index" asp-controller="Product"><i class="fa fa-box"></i>Quản lý sản phẩm</a></li>
            <li><a asp-action="Index" asp-controller="Category"><i class="fa fa-box"></i>Quản lý loại sản phẩm</a></li>
            <li><a href="#"  ><i class="fa fa-truck" ></i>Quản lý nhà cung cấp</a></li>
            <li><a href="#"><i class="fa fa-file-invoice"></i>Quản lý hóa đơn</a></li>
            <li><a href="#"><i class="fa fa-table"></i>Quản lý loại bàn</a></li>
            <li><a href="#"><i class="fa fa-th"></i>Quản lý bàn</a></li>
            <li><a href="#"><i class="fa fa-users"></i>Quản lý người dùng</a></li>
            <li><a asp-controller="Staff"><i class="fa fa-user-tie"></i>Quản lý nhân viên</a></li>
            <li><a href="#"><i class="fa fa-user-secret"></i>Quản lý hợp đồng</a></li>
            <li><a asp-controller="Position"><i class="fa fa-user-secret"></i>Quản lý chức vụ</a></li>
            <li><a asp-controller="Department"><i class="fa fa-user-secret"></i>Quản lý phòng ban</a></li>
        </ul>
    </div>

    <div class="main-content">
        <div class="header">
            <div class="admin-info">Welcome, Administrator</div>
            <div><a href="#" style="color: white; text-decoration: none;">Logout</a></div>
        </div>

        <h1>Dashboard</h1>
       @RenderBody()
    </div>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>