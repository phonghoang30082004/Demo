@model IEnumerable<Demo.Models.CategoryModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách Danh Mục</title>
</head>
<body>
    <h1>Danh sách Danh Mục</h1>
    <a href="@Url.Action("Create", "Category")">Thêm mới danh mục</a>
    <table border="1">
        <thead>
            <tr>
                <th>Tên danh mục</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        <a href="@Url.Action("Edit", "Category", new { id = category.Id })">Sửa</a> |
                        <a href="@Url.Action("Delete", "Category", new { id = category.Id })">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
