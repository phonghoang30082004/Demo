@{
    ViewData["Title"] = "About";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <!-- Nút Back -->
    <button onclick="window.history.back()" class="btn btn-custom mt-3">
        <i class="fas fa-arrow-left"></i> Quay lại
    </button>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giỏ hàng</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Thiết kế cho các phần tử */
        body {
            background-color: #f8f9fa;
            color: #333;
        }

        h3 {
            color: #FF7F00; /* Màu cam vàng tối */
            margin-bottom: 20px;
        }

        .btn-custom {
            background-color: #FF7F00; /* Màu cam vàng tối */
            color: white;
            border: none;
        }

            .btn-custom:hover {
                background-color: #e76f00;
            }

        .table {
            background-color: white;
        }

            .table th, .table td {
                text-align: center;
                padding: 15px;
            }

            /* Hiệu ứng hover cho các hàng trong bảng */
            .table tbody tr:hover {
                background-color: #f1f1f1;
            }

            .table td img {
                max-width: 50px;
                height: auto;
                display: block;
                margin: 0 auto;
            }

        .table-responsive {
            margin-bottom: 30px;
        }

        /* Phần tử Nút Back */
        .btn-custom {
            background-color: #FF7F00;
            color: white;
            border: none;
        }

            .btn-custom:hover {
                background-color: #e76f00;
            }
    </style>
</head>
